{
  "files": [],
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.cloudflare.json" }],
  "compilerOptions": {
    "checkJs": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler", // or "nodenext"
    "module": "ESNext", // optional but recommended with nodenext
    "target": "ES2022", // or similar modern target
    "types": ["@cloudflare/workers-types"], // if needed
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    }
  }
}